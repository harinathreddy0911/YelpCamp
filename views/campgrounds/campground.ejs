
<% layout('layouts/boilerplate')%>
<div id="cluster-map" style="width: 100%; height: 500px"></div>
<div class="container">
<h1>All camps</h1>
<div>
    <a href="/campgrounds/new">Add camp</a>
</div>
<% for (let camp of camps){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (camp.imageUrl.length) { %>
                <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= camp.imageUrl[0].url %>">
            <% } else { %>
                <img crossorigin="anonymous" class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
            <% } %>
        </div>
        
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %> </h5>

                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location%></small>
                </p>
                <a class="btn btn-primary" href="/campground/<%=camp._id%>">View <%=camp.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  
</script>

<script>
      const campgrounds = { features: <%- JSON.stringify(camps) %>}
</script>
<script src="/javascript/clusterMap.js"></script>